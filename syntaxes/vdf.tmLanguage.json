{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Valve KeyValues",
	"patterns": [
		{
			"match": "^(\\s?\"?#base\"?)\\s+(\".*\")$",
			"captures": {
				"1": {
					"name": "keyword.control"
				},
				"2": {
					"name": "string"
				}
			}
		},
		{
			"name": "comment",
			"match": "//.*"
		},
		{
			"name": "constant.character",
			"match": "\\[.*\\]"
		},
		{
			"name": "variable",
			"match": "(\"?[\\w.]+\"?)\\s*(\".*\")",
			"captures": {
				"1": {
					"name": "variable"
				},
				"2": {
					"name": "string.quoted.double"
				}
			}
		},
		{
			"name": "variable",
			"match": "(\".*\")"
		}
	],
	"repository": {},
	"scopeName": "source.vdf"
}
