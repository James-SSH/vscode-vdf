{
  "name": "vscode-vdf",
  "displayName": "VSCode VDF",
  "description": "VDF language support for VSCode",
  "version": "2.1.0",
  "publisher": "pfwobcke",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#161616",
    "theme": "dark"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cooolbros/vscode-vdf"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onCommand:vscode-vdf.formatVDF",
    "onCommand:vscode-vdf.JSONToVDF",
    "onCommand:vscode-vdf.showReferences",
    "onCommand:vscode-vdf.sortVDF",
    "onCommand:vscode-vdf.VDFToJSON",
    "onLanguage:hudanimations",
    "onLanguage:popfile",
    "onLanguage:vdf"
  ],
  "main": "./client/dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "VDF",
        "title": "Format VDF",
        "command": "vscode-vdf.formatVDF"
      },
      {
        "category": "VDF",
        "title": "Convert JSON to VDF",
        "command": "vscode-vdf.JSONToVDF"
      },
      {
        "category": "VDF",
        "title": "Show References",
        "command": "vscode-vdf.showReferences"
      },
      {
        "category": "VDF",
        "title": "Sort VDF",
        "command": "vscode-vdf.sortVDF"
      },
      {
        "category": "VDF",
        "title": "Convert VDF to JSON",
        "command": "vscode-vdf.VDFToJSON"
      }
    ],
    "grammars": [
      {
        "language": "hudanimations",
        "scopeName": "source.hudanimations",
        "path": "./syntaxes/hudanimations.tmLanguage.json"
      },
      {
        "language": "popfile",
        "scopeName": "source.popfile",
        "path": "./syntaxes/popfile.tmLanguage.json"
      },
      {
        "language": "vdf",
        "scopeName": "source.vdf",
        "path": "./syntaxes/vdf.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "hudanimations",
        "aliases": [
          "Valve HUD Animations",
          "hudanimations"
        ],
        "extensions": [
          ".hudanimations"
        ],
        "filenamePatterns": [
          "hudanimations*.txt"
        ],
        "configuration": "./language-configuration/hudanimations-language-configuration.json"
      },
      {
        "id": "popfile",
        "aliases": [
          "Popfile",
          "popfile"
        ],
        "extensions": [
          ".pop"
        ],
        "configuration": "./language-configuration/popfile-language-configuration.json"
      },
      {
        "id": "vdf",
        "aliases": [
          "Valve KeyValues",
          "vdf"
        ],
        "extensions": [
          ".res",
          ".vdf",
          ".vmt"
        ],
        "filenames": [
          "hudanimations_manifest.txt"
        ],
        "configuration": "./language-configuration/vdf-language-configuration.json"
      }
    ],
    "configuration": {
      "title": "VDF",
      "properties": {
        "vscode-vdf.autoCompletionKind": {
          "description": "Controls the method of providing autocompletion file items.",
          "type": "string",
          "enum": [
            "incremental",
            "all"
          ],
          "enumDescriptions": [
            "Show only files in suggested folder and suggest child items when a folder is selected.",
            "Suggest all files recursively."
          ],
          "default": "incremental"
        },
        "vscode-vdf.hudAnimations.extraTabs": {
          "description": "Controls the number of tabs to insert after a token when formatting HUD animations.",
          "type": "number",
          "default": 1,
          "minimum": 1
        },
        "vscode-vdf.hudAnimations.layoutScope": {
          "description": "Controls the scope to compare token lengths to when formatting HUD animations.",
          "type": "string",
          "enum": [
            "event",
            "file"
          ],
          "default": "event"
        },
        "vscode-vdf.hudAnimations.referencesCodeLens.showOnAllEvents": {
          "description": "Enable/disable references CodeLens on all events in HUD Animations files.",
          "type": "boolean",
          "default": false
        },
        "vscode-vdf.referencesCodeLens.showOnAllElements": {
          "description": "Enable/disable references CodeLens on all elements in VDF files.",
          "type": "boolean",
          "default": false
        },
        "vscode-vdf.teamFortress2Folder": {
          "description": "Path to Team Fortress 2 Folder",
          "type": "string",
          "default": "C:/Program Files (x86)/Steam/steamapps/common/Team Fortress 2"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build --force shared/VDF && tsc --build --force shared/hudanimations && tsc --build --force shared/tools && tsc --build --force client && tsc --build --force servers/hudanimations && tsc --build --force servers/popfile && tsc --build --force servers/vdf",
    "postinstall": "cd client && npm install && cd .."
  },
  "dependencies": {
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.13",
    "typescript": "^4.5.5"
  },
  "__metadata": {
    "id": "93d4f61b-4a5a-436e-95d4-af591fe14d15",
    "publisherDisplayName": "pfwobcke",
    "publisherId": "0bca7cad-ed90-49e6-88a6-828825345806",
    "isPreReleaseVersion": false
  }
}
